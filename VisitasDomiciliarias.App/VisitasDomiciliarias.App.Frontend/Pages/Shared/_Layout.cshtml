        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - App+Plus presentamos nuestra ASP.NET Application - <a asp-area=""
                asp-page="/Index">Proyecto ciclo 3 Misión Tic 2022</a>
        </div>
